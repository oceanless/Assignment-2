<%- include("templates/header") %>

<div class="container-fluid">
  <h1 style="text-align: center">Welcome, <%= username %>!</h1>
</div>
<div class="container-fluid">
  <h2 style="padding-left: 5%">Users</h2>
</div>

<div class="container">
  <% users.forEach(user => { %>
    <div class="row">
      <div class="col-sm-8">
        <p><%= user.username %> (<%= user.user_type %>)</p>
      </div>
      <div class="col-sm-4">
          <a href="/promote/<%= user.username %>" class="btn btn-danger">Promote to admin</a>
          <a href="/demote/<%= user.username %>" class="btn btn-success">Demote to user</a>
      </div>
    </div>
  <% }) %>
</div>

<%- include("templates/footer") %>
